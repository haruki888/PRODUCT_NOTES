<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :name, class: "label-login" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :store_id, "store code", class: "label-login" %>
      <%= f.number_field :store_id, class: 'form-control' %>

      <%= f.label :password, class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "ログイン", class: "btn btn-info btn-block btn-login" %>
    <% end %>
  </div>
</div>
